<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theyavikteam.monsterboard">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>


    <application
        android:icon="@drawable/logo_monster_cells"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MenuActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".ui.BluetoothActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".ui.DeviceListActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".ui.GameActivity"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>